    <title>Login</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href='vendor/bootstrap/css/glyphicon.min.css' rel="stylesheet"/>

    <!-- Custom styles for this template -->
    <link href="css/modern-business.css" rel="stylesheet">
    <script src="jquery.js"></script>
    <script>
    $(function(){
      $("#includeFooter").load("footer.html");
      //$("#includeHeader").load("header.html");
    });
    </script>

  </head>

  <body>

    <!-- Navigation -->
    <div id="includeHeader"><% include ./header %></div>

    <!-- Page Content -->
    <div class="container">

      <!-- Page Heading/Breadcrumbs -->
      <h1 class="mt-4 mb-3">Login
      </h1>

      <!-- Contact Form -->
      <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
      <div class="row">
        <div class="col-lg-8 mb-4">
          <form name="sentMessage" id="contactForm" novalidate action="/login" method="POST">
            <div class="control-group form-group">
              <div class="controls">
                <label>Username/ email:</label>
                <input type="text" class="form-control" name="email" required data-validation-required-message="Please enter the username.">
                <p class="help-block"></p>
              </div>
            </div>
            <div class="control-group form-group">
              <div class="controls">
                <label>Password:</label>
                <input type="password" class="form-control" name="password" required data-validation-required-message="Please enter the password">
              </div>
            </div>
            <div id="success"></div>
            <!-- For success/fail messages -->
            <button type="submit" class="btn btn-primary send-message-color bg-dark" id="sendMessageButton">Login</button> <a class="bg-dark btn btn-secondary" href="register">New User?</a>
          </form>
        </div>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->
    <br/>
    <br/>
    <br/>

    <!-- Footer -->
    <div id="includeFooter"></div>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Contact form JavaScript -->
